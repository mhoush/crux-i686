# Description: Secure Sockets Layer and Transport Layer Security tools
# URL:         http://www.openssl.org/
# Maintainer:  CRUX System Team, core-ports at crux dot nu

name=openssl
version=1.0.2a
release=1
source=(ftp://ftp.openssl.org/source/$name-$version.tar.gz \
        mksslcert.sh)

build() {
    cd $name-$version

    export MAKEFLAGS="$MAKEFLAGS -j1"

    ./config --prefix=/usr \
             --openssldir=/etc/ssl \
             shared

    sed -i "s|-O3|$CFLAGS|" Makefile

    make depend
    make INSTALL_PREFIX=$PKG LIBDIR=lib MANDIR=/usr/man MANSUFFIX=ssl install

    find $PKG -name "*fips*" -delete
    chmod -R +w $PKG
    install -D -m 755 $SRC/mksslcert.sh $PKG/usr/bin/mksslcert
}
